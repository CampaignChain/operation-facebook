{% block campaignchain_operation_facebook_publish_status_widget %}
    {% spaceless %}
        {% stylesheets '@campaignchain_operation_facebook_css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}
        {% include 'CampaignChainCoreBundle:Operation:field_header.html.twig' %}
            <p><strong>Status</strong></p>
            {{ form_row(form.message, { 'widget_col': 12}) }}
            {% if form.privacy is defined %}
                {{ form_row(form.privacy, { 'label_col': 3, 'widget_col': 9}) }}
            {% endif %}
        {% include 'CampaignChainCoreBundle:Operation:field_footer.html.twig' %}
    {% endspaceless %}
{% endblock %}